<div class="container" id="viewAll">
  <div class="jumbotron"></div>

  <a href="/">HOME</a> | <a href="/add">CREATE ACCOUNT</a> | <a href="/all">FIND ALL BUDDIES</a> | <a
    href="/admin">ADMIN</a>
  <p class="lead">Welcome Aboard! You can browse through all of our buddies below. Or you can use the filters to narrow
    your selection.</p>

  <div class="row">
    <div class="col">
      {{!-- <h2 class="display-4">{{msg}}</h2> --}}
      <h3>All Buddies:</h3>
    </div>
  </div>
  <div id="buddy-list" class="list-group">
    {{#each buddies}}
    <div data-id="{{this.id}}" class="row">
      <div class="col-md-3">
        <a href="buddy/{{this.id}}">{{this.firstName}} {{this.lastName}} </a>
      </div>
      <div class="col-md-4">
        <a><i class="far fa-envelope"></i> {{this.email}}</a>
      </div>
      <div class="col-md-4">
        <button class="btn btn-danger float-right delete">ï½˜</button>
      </div>
    </div>
    {{/each}}
    <br>
  </div>
</div>