<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Welcome to the site take a look at some of the recent Buddies to join below.  Click the link above to create an account.</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="buddy-text">Buddy Text</label>
            <input type="text" id="buddy-text" class="form-control" aria-describedby="buddy-text" placeholder="Enter Buddy Text">
          </div>
          <div class="form-group">
            <label for="buddy-description">Buddy Description</label>
            <textarea class="form-control" id="buddy-description" aria-describedby="buddy-description" placeholder="Enter Buddy Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>New Buddies:</h3>
        <ul id="buddy-list" class="list-group">
          {{#each buddies}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="buddy/{{this.id}}">{{this.firstName}} {{this.lastName}}  </a>
            <a>{{this.email}}</a>
          
        
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
